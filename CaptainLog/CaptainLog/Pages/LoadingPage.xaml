<Page x:Class="CaptainLog.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CaptainLog.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadingPage">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource BackgroundColor}"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Loading UI" VerticalAlignment="Center" FontSize="48">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{DynamicResource ForegroundColor}"/>
            </TextBlock.Foreground>
        </TextBlock>
        <ProgressBar HorizontalAlignment="Center" Height="22" VerticalAlignment="Center" Width="326" Margin="0,109,0,0" Background="{x:Null}" IsIndeterminate="True">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="{DynamicResource ForegroundColor}"/>
            </ProgressBar.Foreground>
            <ProgressBar.BorderBrush>
                <SolidColorBrush Color="{DynamicResource ForegroundColor}"/>
            </ProgressBar.BorderBrush>
        </ProgressBar>

    </Grid>
</Page>
