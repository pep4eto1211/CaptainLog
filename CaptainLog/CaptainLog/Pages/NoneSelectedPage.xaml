<Page x:Class="CaptainLog.Pages.NoneSelectedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CaptainLog.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NoneSelectedPage">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource DarkBackroundColor}"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Select log to begin" VerticalAlignment="Center" FontSize="48">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{DynamicResource ForegroundColor}"/>
            </TextBlock.Foreground>
        </TextBlock>

    </Grid>
</Page>
