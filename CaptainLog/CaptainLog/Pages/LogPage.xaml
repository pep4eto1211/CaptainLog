<Page x:Class="CaptainLog.Pages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CaptainLog.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource DarkBackroundColor}"/>
        </Grid.Background>
        <TextBox x:Name="logContentsTextBox" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}">
            <TextBox.Foreground>
                <SolidColorBrush Color="{DynamicResource ForegroundColor}"/>
            </TextBox.Foreground>
        </TextBox>

    </Grid>
</Page>
